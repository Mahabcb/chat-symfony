{% extends 'base.html.twig' %}

{% block title %}Salons Discord{% endblock %}

{% block body %}
  <div class="container mx-auto">
    <h1 class="text-2xl font-bold mb-5">Liste des salons</h1>

    <div class="flex flex-wrap">
      {% for channel in channels %}
        <div class="w-1/3 p-3">
          <div class="bg-white rounded-lg shadow-md p-5">
            <h5 class="text-xl font-bold">
              <a href="{{ path('show_channel', {id: channel.id}) }}">{{ channel.name }}</a>
            </h5>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="my-5">
      <h2 class="text-xl font-bold">Ajouter un salon</h2>
      <form class="bg-white p-5 rounded-lg shadow-md" {{ form_start(form) }}>
        <div class="mb-4">
          {{ form_widget(form.name) }}
        </div>
        <button class="bg-blue-500 text-white rounded-lg py-2 px-4 hover:bg-blue-600">Envoyer</button>
      {{ form_end(form) }}
      </form>
    </div>
  </div>
{% endblock %}