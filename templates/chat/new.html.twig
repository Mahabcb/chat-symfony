{% extends 'base.html.twig' %}

{% block title %}Bienvenu dans le mini discord{% endblock %}

{% block body %}

<h1>Tous les salons discord</h1>

{% for channel in channels %}
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">
                <a href="{{ path('show_channel', {id: channel.id}) }}">{{ channel.name }}</a>
            </h5>
        </div>
    </div>
{% endfor %}

    {{ form_start(form) }}
    
            {{ form_row(form.name) }}
    
            <button type="submit" class="btn btn-primary">Envoyer</button>
    {{ form_end(form) }}

{% endblock %}